extends base.pug

block head
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  meta(name='description' content='Najpouzdanije Automehaničarske Usluge Za Sve Automobile. Preko 20 godina aktivnog iskustva!')
  meta(name='keywords' content='Auto Mehanicar, Automehaničar,Auto,Automobil,Mehaničar,Autoservis,Popravka,Mali servis,Veliki servis,zamena ulja,Banjaluka,Banja Luka,Fiat,Alfa Romeo,Lancia,Citroen,Ford,Peugeot,Toyota,Mazda,Honda,Mitsubishi,Kia,Hyundai,Škoda,Seat,Volvo,Renault,Daewoo,Chevrolet,Volkswagen,Audi,Mercedes,')
  // Open Graph Tags
  meta(property='og:locale' content='sr_rs')
  meta(property='og:locale:alternate' content='bs-ba')
  meta(property='og:type' content='website')
  meta(property='og:title' content=`${title}`)
  meta(property='og:description' content=`${synopsis}`)
  meta(property='og:url' content=`https://autogasgaga.ba/blog/${slug}`)
  meta(property='og:image' content='#{thumbnail.path}')
  // Twitter Tags
  meta(property='twitter:card' content='summary_large_image')
  meta(property='twitter:title' content=`${title}`)
  meta(property='twitter:description' content=`${synopsis}`)
  meta(property='twitter:image' content=`${thumbnail.path}`)
  meta(property='twitter:image:alt' content=`${thumbnailAlt}`)
  meta(property='twitter:url' content=`https://autogasgaga.ba/blog/${slug}`)
  // Links
  link(rel='stylesheet' href='/stylesheet/blog.css')
  
  link(rel='shortcut icon' type='image/x-icon' href='/img/logoblack.svg')
  title Auto Gas Gaga | Automehaničarske Usluge

block content 
  .blog#blog
    header.blog__header(style=`--bg-image: url(${image.path});`)
      .blog__header__overlay
        h1=title
    .content!=content

block scripts
  script(src="/javascript/home.bundle.js")