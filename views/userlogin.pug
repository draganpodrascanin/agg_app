extends base

block head
  title Auto Gas Gaga | E-servisna knjizica login
  meta(property='og:locale' content='sr_rs')
  meta(property='og:locale:alternate' content='bs-ba')
  meta(property='og:type' content='website')
  meta(property='og:title' content='Auto Gas Gaga | E-Servisna Knjižica Login')
  meta(property='og:description' content='Ulogujte se da vidite vašu servisnu knjižicu.')
  meta(property='og:url' content='https://autogasgaga.ba/userlogin')
  meta(property='og:image' content='https://autogasgaga.ba/OGhero.jpg')
  link(rel='stylesheet' href='/stylesheet/userlogin.css')
  link(rel='shortcut icon' type='image/x-icon' href='/img/logoblack.svg')



block content
  main.login-wrapper
    .container
      .form-wrapper
        h1 Log In
        // Form
        form#login-form.form(action='#')
          .form__group
            label.form__label(for='name') Email
            input#email.form__input(type='text' placeholder='email@primer.com' required)
          .form__group
            label.form__label(for='tel') Šifra
            input#password.form__input(type='password' placeholder='******' required)
          button.form__button(type='submit') Potvrdi
        .forgot-password__container
          a.forgot-password__anchor(href="/zaboravili-sifru") Zaboravili ste šifru?

block scripts
  script(src="javascript/userlogin.bundle.js")